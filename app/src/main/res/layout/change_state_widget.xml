<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buttonWidget1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/buttonWidgetUnchecked"
            android:src="@drawable/outline_call_black_18dp"
            android:tint="@android:color/white"/>

        <ImageButton
            android:id="@+id/buttonWidget2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/buttonWidgetUnchecked"
            android:src="@drawable/outline_call_end_black_18dp"
            android:tint="@android:color/white"/>

        <ImageButton
            android:id="@+id/buttonWidget3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/buttonWidgetUnchecked"
            android:src="@drawable/outline_cancel_black_18dp"
            android:tint="@android:color/white"/>

    </LinearLayout>


</RelativeLayout>