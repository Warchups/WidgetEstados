<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/buttonWidgetUnchecked"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buttonWidgetTalking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/talking"
            app:srcCompat="@drawable/outline_call_24"
            android:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/buttonWidgetIdle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/idle"
            app:srcCompat="@drawable/outline_call_end_24"
            android:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/buttonWidgetLocked"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/locked"
            app:srcCompat="@drawable/outline_cancel_24"
            android:tint="@android:color/white" />

    </LinearLayout>


</RelativeLayout>