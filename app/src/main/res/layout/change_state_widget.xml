<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/buttonWidgetUnchecked"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buttonWidgetTalking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/talking"
            android:src="@drawable/outline_call_black_18dp"
            android:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/buttonWidgetIdle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/idle"
            android:src="@drawable/outline_call_end_black_18dp"
            android:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/buttonWidgetLocked"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/locked"
            android:src="@drawable/outline_cancel_black_18dp"
            android:tint="@android:color/white" />

    </LinearLayout>


</RelativeLayout>